<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <div
      class="container"
      style="margin: 30px auto 30px auto; max-width: 600px"
    >
      <h1 style="text-align: center; margin-bottom: 20px">Ruang Bergurau</h1>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title" style="text-align: center">
            Register Account
          </h5>
          <div style="margin: 20px auto 20px auto; max-width: 470px">
            <% if (error) { %>
            <ul style="color: red">
              <% error.split(",").forEach((item) => { %>
              <li><%= item %></li>
              <% }) %>
            </ul>
            <% } %>
            <form action="/users/register" method="post">
              <div class="mb-3">
                <label class="form-label">Username</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="username..."
                  name="username"
                  autocomplete="off"
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Email</label>
                <input
                  type="email"
                  class="form-control"
                  placeholder="email..."
                  name="email"
                  autocomplete="off"
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Password</label>
                <input
                  type="password"
                  class="form-control"
                  placeholder="password..."
                  name="password"
                  autocomplete="off"
                />
              </div>
              <div class="mb-3">
                <select class="form-select" name="last_education">
                  <option selected disabled>--Education--</option>
                  <option value="Sarjana Ekonomi">Sarjana Ekonomi</option>
                  <option value="Sarjana Kimia">Sarjana Kimia</option>
                  <option value="Sarjana Teknik">Sarjana Teknik</option>
                </select>
              </div>
              <div style="display: flex; gap: 20px">
                <a href="/users/login">
                  <button type="button" class="btn btn-outline-secondary">
                    Cancel
                  </button>
                </a>
                <a href="">
                  <button type="submit" class="btn btn-outline-primary">
                    Submit
                  </button>
                </a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
