<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <div class="container" style="margin-top: 30px; margin-bottom: 30px;">
      <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/admin">Ruang Bergurau</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div
            class="collapse navbar-collapse"
            id="navbarSupportedContent"
            style="display: flex; position: relative"
          >
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="/admin/add-course">Add Course</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/add-category">Add Category</a>
              </li>
              <li class="nav-item" style="position: absolute; right: 0">
                <a class="nav-link" href="/admin/logout">Logout</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <div style="margin-top: 15px">
        <h3>Welcome, Admin Ruangan</h3>
      <div style="margin-top: 15px">
        <h3>Table Course</h3>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Name</th>
              <th scope="col">Description</th>
              <th scope="col">Image</th>
              <th scope="col">Category</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% courses.forEach((course, index) => { %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= course.course_name %></td>
              <td><%= course.description %></td>
              <td>
                <img
                  src="<%= course.course_imageUrl %>"
                  style="width: 150px; height: 100px"
                />
              </td>
              <td><%= course.Category.category_name %></td>
              <td>
                <div style="display: flex; gap: 10px">
                  <a href="/admin/<%= course.id %>/edit/course">
                    <button type="button" class="btn btn-outline-warning">
                      Edit
                    </button>
                  </a>
                  <a href="/admin/<%= course.id %>/delete/course">
                    <button type="button" class="btn btn-outline-danger">
                      Delete
                    </button>
                  </a>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div style="margin-top: 15px">
        <h3>Table Category</h3>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Category Name</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach((el ,index) => { %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= el.category_name %></td>
              <td>
                <div style="display: flex; gap: 10px">
                  <a href="/admin/<%= el.id %>/edit/category">
                    <button type="button" class="btn btn-outline-warning">
                      Edit
                    </button>
                  </a>
                  <a href="/admin/<%= el.id %>/delete/category">
                    <button type="button" class="btn btn-outline-danger">
                      Delete
                    </button>
                  </a>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
