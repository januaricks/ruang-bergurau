<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <div class="container" style="margin-top: 30px">
      <h3>Edit Course</h3>
      <div>
        <form action="/admin/<%= course.id %>/edit/course" method="post">
          <div class="input-group mb-3">
            <span class="input-group-text">Course Name</span>
            <input
              type="text"
              class="form-control"
              placeholder="Course name..."
              name="course_name"
              value="<%= course.course_name %>"
            />
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">Image Url</span>
            <input
              type="text"
              class="form-control"
              placeholder="Image Url..."
              name="course_imageUrl"
              value="<%= course.course_imageUrl %>"
            />
          </div>
          <div class="input-group mb-3">
            <select name="CategoryId" class="form-select">
              <option selected disabled>--Choose Category--</option>
              <% categories.forEach(el => { %>
              <option value="<%= el.id %>"><%= el.category_name %></option>
              <% }) %>
            </select>
          </div>
          <div class="form-floating">
            <textarea
              class="form-control"
              placeholder="Description"
              style="height: 150px"
              name="description"
            ><%= course.description %></textarea
            >
            <label for="floatingTextarea">Description here...</label>
          </div>
          <div style="display: flex; gap: 15px; margin-top: 15px">
            <a href="/admin">
              <button type="button" class="btn btn-secondary">Cancel</button>
            </a>
            <a href="">
              <button type="submit" class="btn btn-primary">Submit</button>
            </a>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
